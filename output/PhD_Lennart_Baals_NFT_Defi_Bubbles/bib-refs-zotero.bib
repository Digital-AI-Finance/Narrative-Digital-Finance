@article{zhang_rational_2012,
	title = {Rational {Herding} in {Microloan} {Markets}},
	volume = {58},
	issn = {0025-1909, 1526-5501},
	url = {https://pubsonline.informs.org/doi/10.1287/mnsc.1110.1459},
	doi = {10.1287/mnsc.1110.1459},
	abstract = {Microloan markets allow individual borrowers to raise funding from multiple individual lenders. We use a unique panel data set that tracks the funding dynamics of borrower listings on Prosper.com, the largest microloan market in the United States. We find evidence of rational herding among lenders. Well-funded borrower listings tend to attract more funding after we control for unobserved listing heterogeneity and payoff externalities. Moreover, instead of passively mimicking their peers (irrational herding), lenders engage in active observational learning (rational herding); they infer the creditworthiness of borrowers by observing peer lending decisions and use publicly observable borrower characteristics to moderate their inferences. Counterintuitively, obvious defects (e.g., poor credit grades) amplify a listing's herding momentum, as lenders infer superior creditworthiness to justify the herd. Similarly, favorable borrower characteristics (e.g., friend endorsements) weaken the herding effect, as lenders attribute herding to these observable merits. Follow-up analysis shows that rational herding beats irrational herding in predicting loan performance.
            This paper was accepted by Pradeep Chintagunta, marketing.},
	language = {en},
	number = {5},
	urldate = {2024-01-22},
	journal = {Management Science},
	author = {Zhang, Juanjuan and Liu, Peng},
	month = may,
	year = {2012},
	pages = {892--912},
}

@article{guo_joint_2011,
