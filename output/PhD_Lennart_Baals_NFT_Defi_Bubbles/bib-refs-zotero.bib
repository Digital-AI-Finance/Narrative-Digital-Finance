	keywords = {credit scoring, peer-to-peer lending, portfolio optimization},
	pages = {2359--2373},
}

@article{rodriguez-gomezAnalysisModellingResources2015,
	title = {Analysis and modelling of resources shared in the {BitTorrent} network},
